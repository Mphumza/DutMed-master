<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/historyFragment">

    <fragment
        android:id="@+id/historyFragment"
        android:name="com.example.dutmed.HistoryFragment"
        android:label="History"
        tools:layout="@layout/fragment_history" />

    <activity
        android:id="@+id/nav_appointment"
        android:name="com.example.dutmed.AppointmentActivity"
        android:label="Appointments"
        tools:layout="@layout/fragment_appointments" />

    <!-- Symptom Checker Fragment -->
    <activity
        android:id="@+id/nav_symptom_checker"
        android:name="com.example.dutmed.SymptomChecker"
        android:label="Health Topics"
        tools:layout="@layout/symptom_click" />

    <!-- Feedback Fragment -->
    <fragment
        android:id="@+id/feedbackFragment"
        android:name="com.example.dutmed.FeedbackFragment"
        android:label="Feedback"
        tools:layout="@layout/fragment_feedback" />

    <!-- About Fragment -->
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.dutmed.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about" />

    <!-- Chatbot Fragment -->
    <activity
        android:id="@+id/nav_chatbotActivity"
        android:name="com.example.dutmed.ChatbotActivity"
        android:label="Chatbot"
        tools:layout="@layout/activity_chatbot" />

    <!-- Profile Fragment -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.dutmed.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />


</navigation>